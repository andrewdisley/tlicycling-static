---
layout: layouts/base.njk
section: post
---

<article class="container">
  <div class="post">
    <section class="post-header">
      <h1 class="title post-title">{{ title }}</h1>
      <div class="post-meta">
        <p><small class="text-sm">Published: <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time></a></small></p>
        {% if tags1 %}
        <p><small class="text-sm">Posted in:
        {% for tag in tags %}
          {%- if tag != "post" -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
          {%- endif -%}
        {% endfor %}
        </small></p>
        {% endif %}
      </div>
    </section>
    <div class="post-body">
      {{ layoutContent | safe }}
    </div>
    <nav class="post-footer">
      <a class="btn" href="{{ '/news/' | url }}">‚Üê News index</a>
    </nav>
  </div>
</article>