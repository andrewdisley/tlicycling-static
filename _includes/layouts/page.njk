---
layout: layouts/base.njk
section: page
---

<article class="container">

  {% if articleLayout == 'medialeft' %}
  {% endif %}

  {% if media.src %}
  <section class="px-1 md:flex">
    <div class="md:w-40">
      <figure class="ar ar-4x3">
        <img alt="{{ media.alt }}" class="arm" src="{{ media.src }}">
      </figure>
    </div>
    <div class="md:w-60 md:pl-1 lg:pl-2">
      {{ layoutContent | safe }}
    </div>
  </section>

  {% else %}

  <section class="px-1 mx-auto md:w-75">
    {{ layoutContent | safe }}
  </section>

  {% endif %}

</article>
