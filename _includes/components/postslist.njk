{% for post in postslist | reverse %}
<article class="border-b-1 border-grey mb-1 pb-2" {% if post.url == url %} data-current="current item"{% endif %}>
  <h3 class="text-lg mb-05"><a href="{{ post.url | url }}">{% if post.data.title %}{{ post.data.title }}{% else %}Untitled{% endif %}</a></h3>
  {% if post.data.summary %}
  <p class="mb-05">{{ post.data.summary }}</p>
  {% endif %}
  <div>
    <time datetime="{{ post.date | machineDate }}"><small class="text-sm">{{ post.date | readableDate }}</small></time>
    {% if post.data.tags1 %}
    <p><small class="text-sm">
    {% for tag in post.data.tags %}
    {%- if tag != "post" -%}
    {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
    {%- endif -%}
    {% endfor %}
    </small></p>
    {% endif %}
  </div>
</article>
{% endfor %}